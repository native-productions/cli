{
  "name": "image-gen",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/image-gen/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/image-gen",
        "main": "packages/image-gen/src/index.ts",
        "tsConfig": "packages/image-gen/tsconfig.lib.json",
        "assets": ["packages/image-gen/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/image-gen/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/image-gen/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "release": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "npx semantic-release-plus --extends ./packages/image-gen/release.config.js"
      }
    }
  },
  "tags": []
}
